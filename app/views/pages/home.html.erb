<div class="wrapper-cover-picture">
  <div class="container">
    <div class= "slogan">
      <h1 class="title">TROUVE TA COURSE, <br>INVITE TES POTES.</h1>
    </div>
  </div>
</div>
<div class="box">
  <div class= "form-group form-items">
    <%= form_tag races_path, method: :get do %>
      <div class="form-item1 hidden-xs">
        <% @sports.each do |sport| %>
          <%= label_tag '', nil, class: "buttons-sports", style: "background-image: linear-gradient(-225deg, #{linear_background_for(sport)} 60%, rgba(255, 255, 255, 0.5) 100%), url('#{image_path picture_path_for(sport)}'); background-size: cover;" do %>
            <%= check_box_tag "search[sports_name][]", sport.name, nil, class: "hide_checkbox" %>
            <p class="sports-label"><%= placeholder_for(sport) %></p>
          <% end %>
        <% end %>
      </div>
      <div class="form-item4 hidden-sm hidden-md hidden-lg">
          <% @sports.each do |sport| %>
            <!-- <div class="row"> -->
              <!-- <div class="col-xs-12"> -->
              <%= label_tag '', nil, class: "buttons-sports-center", style: "background-image: linear-gradient(-225deg, #{linear_background_for(sport)} 60%, rgba(255, 255, 255, 0.5) 100%), url('#{image_path picture_path_for(sport)}'); background-size: cover;" do %>
                <%= check_box_tag "search[sports_name][]", sport.name, nil, class: "hide_checkbox" %>
                <p class="sports-label"><%= placeholder_for(sport) %></p>
              <% end %>
            <!-- </div>
          </div> -->
        <% end %>
      </div>
      <div class="form-item2">
        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <%= search_field :search, :place, placeholder: 'OÃ™ ?', class: "search-form", style: "text-align: center" %>
          </div>
          <div class="col-xs-12 col-sm-8 ">
            <%= date_field :search, :date, class: "search-form", style: "text-align: center", id: "datepicker", placeholder: "QUAND ?" %>
          </div>
        </div>
      </div>
      <div class="form-item3 text-center">
        <%= submit_tag "GO !", class: "btn-search"%>
      </div>
    <% end %>
  </div>
</div>

<% content_for(:after_js) do %>
  <script>
    var picker = new Pikaday({
                              field: $('#datepicker')[0],
                              position: "top left" });
  </script>
<% end %>
